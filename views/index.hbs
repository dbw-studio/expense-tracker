<div class="container mt-4">
  {{!-- 類別下拉 --}}
  <div class="form-group row">
    <label for="category" class="col-2">類別</label>
    <select name="category" id="category" class="form-control col-10">
      {{#each categories}}
      <option value="{{this.category}}">{{this.category}}</option>
      {{/each}}
    </select>
  </div>

  {{!-- 總金額 --}}
  <div class="row mt-4">
    <div class="col">
      <h4>總金額：</h4>
    </div>
    <div class="col">
      <h3>25260</h3>
    </div>
  </div>
</div>

<div class="container mt-4">
    <table class="table table-striped">
      <tbody>

        {{#each records}}
          <tr>
            {{!-- 支出內容 --}}
            <th scope="row"><i class="fas fa-utensils"></i></th>
            <td><h4>{{ this.name }}</h4>
            <small>{{ this.date }}</small></td>
            <td>{{ this.amount }}</td>
            {{!-- 編輯選項 --}}
            <td><div class="btn">修改</div></td>
            <td><div class="btn">刪除</div></td>
          </tr>
        {{/each}}


      </tbody>
    </table>
  </div>
</div>

<div class="container my-5">
  <div class="row text-center">
    <div class="col-6 offset-3">
      <button type="submit" class="btn btn-info btn-block">新增支出</button>
    </div>
  </div>
</div>