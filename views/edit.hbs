<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-3 col-md-2 text-center">
      <small>*必填欄位</small>
    </div>
    <div class="col-8 col-md-6 col-xl-5">
      <p>請修改你的支出</p>
    </div>
  </div>

  <form action="/records/{{ record._id }}?_method=PUT" method="POST">

  <div class="row mt-3 text-center">
    <div class="col">
      <div class="form-group row justify-content-center">
        <label for="name" class="col-3 col-md-2 col-lg-1 rounded-pill bg-info text-light text-center p-2 ml-2 m-0">名稱* </label>
        <div class="col-8 col-md-6 col-xl-5">
          <input type="text" name="name" placeholder="支出項目名稱" class="form-control" value="{{ record.name }}" required> 
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <div class="form-group row justify-content-center">
        <label for="date" class="col-3 col-md-2 col-lg-1 rounded-pill bg-info text-light text-center p-2 ml-2 m-0">日期* </label>
        <div class="col-8 col-md-6 col-xl-5">
          <input type="date" name="date" value="{{ record.date }}" class="form-control" required>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <div class="form-group row justify-content-center">
        <label for="category" class="col-3 col-md-2 col-lg-1 rounded-pill bg-info text-light text-center p-2 ml-2 m-0">類別* </label>
        <div class="col-8 col-md-6 col-xl-5">
          <select name="category" id="category" class="form-control" required>
            <option value="{{ record.category }}">{{ record.category }}</option>
            {{#each categories}}
              <option value="{{this.category}}">{{this.category}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>

  </div>

  <div class="row mt-3">
    <div class="col">
      <div class="form-group row justify-content-center">
        <label for="amout" class="col-3 col-md-2 col-lg-1 rounded-pill bg-info text-light text-center p-2 ml-2 m-0">金額* </label>
        <div class="col-8 col-md-6 col-xl-5">
          <input type="number" name="amount" class="form-control" aria-placeholder="支出金額" min=0 required value="{{ record.amount }}">
        </div>
      </div>
    </div>
  </div>

  <div class="row my-4 text-center justify-content-center">
    <div class="col-5 col-md-3">
      <button type="submit" class="btn btn-success btn-block py-3">送出</button>
    </div>
  </div>

  </form>

  <div class="row justify-content-center">
    <div class="col-5 col-md-2">
      <a href="/"><button class="btn btn-secondary btn-block">取消</button></a>
    </div>
  </div>

</div>